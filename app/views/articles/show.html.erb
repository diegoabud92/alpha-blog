<div class="row justify-content-md-center mt-4">
    <div class="col-8">
        <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
                by Test User
            </div>
            <div class="card-body">
                <h5 class="card-title">Title: <%= @article.title %></h5>
                <p class="card-text text-left">Content: <%= simple_format(truncate(@article.description), length: 100, class: "text-left") %></p>
                <%= link_to "Edit", edit_article_path(@article), class:"btn btn-info shadow" %>
                <%= link_to "Delete", article_path(@article), method: :delete, class:"btn btn-danger shadow" %>
            </div>
            <div class="card-footer text-muted">
                Created: <%= time_ago_in_words(@article.created_at) %> ago
            </div>
        </div>
    </div>
</div>

<%= link_to "Back to All", articles_path, class:"btn btn-secondary ml-2" %>