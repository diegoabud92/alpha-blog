<h1 class="text-center mt-4"> Articles Listing Page</h1>
<div class="row justify-content-md-center">
    <div class="col-2">
        <%= link_to "Create New", new_article_path, class:"btn btn-primary justify-content-md-center" %>
    </div>
</div>
<br>
<% @articles.each do |article| %>
    <div class="row justify-content-md-center">
        <div class="col-8">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by <%= article.user.username if article.user %>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
                    <p class="card-text"><%= truncate(article.description, length: 50) %></p>
                    <%= link_to "Show", article_path(article), class:"btn btn-primary" %>
                    <%= link_to "Edit", edit_article_path(article), class:"btn btn-info" %>
                    <%= link_to "Delete", article_path(article), method: :delete, class:"btn btn-danger" %>
                </div>
                <div class="card-footer text-muted">
                    Created: <%= time_ago_in_words(article.created_at) %> ago
                </div>
            </div>
        </div>
    </div>
    <br>
<% end %>



